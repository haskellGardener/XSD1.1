copyright:           Â© 2017-2019 Robert Lee
homepage:            https://github.com/haskellGardener/XMLstudy
bug-reports:         https://github.com/haskellGardener/XMLstudy/issues

category:            Test
build-type:          Simple
stability:           alpha (experimental)
cabal-version:       >=1.10

extra-source-files:
  README.md
  stack.yaml

source-repository head
  type:     git
  location: https://github.com/haskellHacker/XMLstudy

library
  default-language:   Haskell2010
  ghc-options:        -Wall
  -- -Werror -O2
  default-extensions: NoImplicitPrelude
                    , OverloadedStrings
                    , RecordWildCards
  hs-source-dirs:     src
  exposed-modules:    Builtin
                    , ComplexTypes
                    , Lading
                    , Parsers
                    , Regex
                    , RegexOut
  build-depends:      attoparsec
                    , base >= 4.8 && < 5
                    , base16-bytestring
                    , base64-bytestring
                    , bytestring
                    , charset
                    , classy-prelude
                    , containers
                    , hourglass
                    , text
                    , xml-conduit
                    , xml-hamlet
                    , scientific

executable XMLstudy-exe
  default-language:  Haskell2010
  ghc-options:       -Wall -Werror -O2 -threaded -rtsopts -with-rtsopts=-N
  default-extensions: NoImplicitPrelude
                    , OverloadedStrings
                    , RecordWildCards
  hs-source-dirs:    src-exe
  main-is:           Main.hs
  build-depends:      XMLstudy
                    , base >= 4.8 && < 5
                    , base64-bytestring
                    , bytestring
                    , classy-prelude
                    , text
                    , xml-conduit

test-suite XMLstudy-test
  type:              exitcode-stdio-1.0
  default-language:  Haskell2010
  ghc-options:       -O2 -threaded -rtsopts -with-rtsopts=-N
  default-extensions: NoImplicitPrelude
                    , OverloadedStrings
                    , RecordWildCards
  hs-source-dirs:    src-test
  main-is:           Main.hs
  build-depends:     base >= 4.8 && < 5
                   , QuickCheck
                   , XMLstudy
                   , base16-bytestring
                   , base64-bytestring
                   , bytestring
                   , classy-prelude
                   , hourglass
                   , smallcheck
                   , tasty >= 0.11
                   -- , tasty-fail-fast
                   , tasty-hunit >= 0.9
                   , tasty-quickcheck
                   , tasty-smallcheck
                   , text
                   , scientific
                   
